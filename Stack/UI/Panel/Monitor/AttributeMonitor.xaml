<UserControl x:Class="Stack.UI.Panel.Monitor.AttributeMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stack.UI.Panel.Monitor"
             xmlns:unit="clr-namespace:Stack.UI.Panel.Monitor.Unit"
             mc:Ignorable="d" 
             Width="250">
    <Border Margin="10" Padding="10" Background="#FFF3F3F3" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="#FF333333" BlurRadius="50" Opacity="0.7" />
        </Border.Effect>
        <StackPanel x:Name="Monitor">
        </StackPanel>
    </Border>
</UserControl>
